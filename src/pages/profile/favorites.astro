---
import { Button } from '../../components/ui/button';
import ProductCard from '../../components/ui/ProductCard.jsx';
/**
 * Profile Favorites Page
 * 个人收藏页面
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { mockService } from '../../lib/mock/service';

const mockFavorites = mockService.getProducts({
  searchQuery: '',
  category: '',
  sort: 'relevance',
  page: 1,
  limit: 6,
}).products;
---

<BaseLayout
  title="お気に入り - UMUO"
  description="保存したお気に入り商品を確認。"
>
  <div class="bg-gray-50/50 min-h-screen pb-24">
    <!-- Header -->
    <div class="bg-white border-b border-gray-100 py-16">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-6 tracking-tighter">
            お気に入り
          </h1>
          <p class="text-xl text-gray-500 font-medium">
            保存した商品を一覧で確認できます。
          </p>
        </div>
      </div>
    </div>

    <div class="container pt-12">
      {mockFavorites.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {mockFavorites.map((product) => (
            <ProductCard product={product} client:load />
          ))}
        </div>
      ) : (
        <div class="bg-white rounded-[3rem] p-20 text-center border border-gray-100 shadow-sm">
          <div class="w-24 h-24 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg
              class="w-10 h-10 text-gray-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width={2}
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              />
            </svg>
          </div>
          <h2 class="text-3xl font-black text-gray-900 mb-4">
            お気に入りがありません
          </h2>
          <p class="text-gray-500 text-lg mb-10 max-w-md mx-auto">
            商品をお気に入りに追加すると、ここに表示されます。
          </p>
          <Button size="lg" asChild>
            <a href="/">商品を探す</a>
          </Button>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
