---
import { ArrowRight, Check, Github, Lock, Mail, User } from 'lucide-react';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
    title="新規登録 - UMUO"
    description="UMUOに登録して、賢い買い物を始めよう。"
>
    <div class="min-h-[80vh] flex items-center justify-center py-24 px-4">
        <div class="w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-10">
                <a href="/" class="inline-flex items-center gap-2 group">
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-primary-600 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg shadow-primary-500/30 group-hover:scale-110 transition-transform"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                d="M10 2a8 8 0 100 16 8 8 0 000-16zM8 7a2 2 0 114 0 2 2 0 01-4 0z"
                            ></path>
                            <path d="M10 12a2 2 0 100 4 2 2 0 000-4z"></path>
                        </svg>
                    </div>
                    <span
                        class="text-2xl font-black bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600"
                    >
                        UMUO
                    </span>
                </a>
            </div>

            <!-- Register Card -->
            <div
                class="bg-white rounded-[2.5rem] shadow-2xl shadow-gray-200/50 p-10 border border-gray-100"
            >
                <h1 class="text-3xl font-black text-gray-900 text-center mb-2">
                    アカウント作成
                </h1>
                <p class="text-gray-500 text-center mb-10">
                    無料で始めましょう
                </p>

                <form class="space-y-6">
                    <!-- Name -->
                    <div>
                        <label
                            class="block text-sm font-bold text-gray-700 mb-2"
                        >
                            お名前
                        </label>
                        <div class="relative">
                            <User
                                className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
                            />
                            <input
                                type="text"
                                placeholder="山田 太郎"
                                class="w-full h-14 pl-12 pr-4 bg-gray-50 border-2 border-gray-100 rounded-2xl text-gray-900 font-medium focus:border-primary-500 focus:bg-white outline-none transition-all"
                            />
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label
                            class="block text-sm font-bold text-gray-700 mb-2"
                        >
                            メールアドレス
                        </label>
                        <div class="relative">
                            <Mail
                                className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
                            />
                            <input
                                type="email"
                                placeholder="you@example.com"
                                class="w-full h-14 pl-12 pr-4 bg-gray-50 border-2 border-gray-100 rounded-2xl text-gray-900 font-medium focus:border-primary-500 focus:bg-white outline-none transition-all"
                            />
                        </div>
                    </div>

                    <!-- Password -->
                    <div>
                        <label
                            class="block text-sm font-bold text-gray-700 mb-2"
                        >
                            パスワード
                        </label>
                        <div class="relative">
                            <Lock
                                className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
                            />
                            <input
                                type="password"
                                placeholder="8文字以上"
                                class="w-full h-14 pl-12 pr-4 bg-gray-50 border-2 border-gray-100 rounded-2xl text-gray-900 font-medium focus:border-primary-500 focus:bg-white outline-none transition-all"
                            />
                        </div>
                    </div>

                    <!-- Features -->
                    <div class="bg-primary-50 rounded-2xl p-6 space-y-3">
                        <p class="text-sm font-bold text-primary-900 mb-4">
                            登録するとできること：
                        </p>
                        {
                            [
                                "価格アラートの設定",
                                "お気に入り商品の保存",
                                "価格履歴の確認",
                                "パーソナライズされたおすすめ",
                            ].map((feature) => (
                                <div class="flex items-center gap-3">
                                    <div class="w-5 h-5 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                                        <Check className="w-3 h-3 text-white" />
                                    </div>
                                    <span class="text-sm text-primary-800">
                                        {feature}
                                    </span>
                                </div>
                            ))
                        }
                    </div>

                    <!-- Submit -->
                    <button
                        type="submit"
                        class="w-full h-14 bg-primary-600 text-white font-black rounded-2xl hover:bg-primary-700 transition-all active:scale-[0.98] shadow-xl shadow-primary-500/30 flex items-center justify-center gap-2"
                    >
                        無料で登録
                        <ArrowRight className="w-5 h-5" />
                    </button>
                </form>

                <!-- Terms -->
                <p
                    class="text-xs text-gray-500 text-center mt-6 leading-relaxed"
                >
                    登録することで、
                    <a href="#" class="text-primary-600 hover:underline"
                        >利用規約</a
                    >
                    と
                    <a href="#" class="text-primary-600 hover:underline"
                        >プライバシーポリシー</a
                    >
                    に同意したものとみなされます。
                </p>
            </div>

            <!-- Login Link -->
            <p class="text-center mt-8 text-gray-600">
                すでにアカウントをお持ちですか？
                <a
                    href="/login"
                    class="font-bold text-primary-600 hover:text-primary-700 ml-1"
                >
                    ログイン
                </a>
            </p>
        </div>
    </div>
</BaseLayout>
