# Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# Site Configuration
# ============================================
PUBLIC_SITE_URL=https://umuo.ai
PUBLIC_SITE_NAME=UMUO
PUBLIC_SITE_DESCRIPTION=賢い買い物、スマートな価格比較

# ============================================
# API Configuration
# ============================================
PUBLIC_API_URL=https://api.umuo.day
PUBLIC_API_TIMEOUT=10000

# ============================================
# Analytics
# ============================================
# Google Analytics 4 Measurement ID
PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager Container ID
PUBLIC_GTM_ID=

# ============================================
# Feature Flags
# ============================================
PUBLIC_ENABLE_ANALYTICS=true
PUBLIC_ENABLE_SENTRY=false
PUBLIC_ENABLE_DEBUG=false

# ============================================
# Third-Party Services
# ============================================
# Cloudflare Turnstile for bot protection
PUBLIC_TURNSTILE_SITE_KEY=

# ============================================
# Search Configuration
# ============================================
PUBLIC_DEFAULT_SEARCH_LIMIT=12
PUBLIC_MAX_SEARCH_LIMIT=100

# ============================================
# Price Alert Configuration
# ============================================
# Email service for price alerts
PUBLIC_EMAIL_SERVICE=sendgrid
PUBLIC_EMAIL_FROM=noreply@umuo.ai

# ============================================
# OAuth Providers (if applicable)
# ============================================
# GitHub OAuth
PUBLIC_GITHUB_CLIENT_ID=

# Google OAuth
PUBLIC_GOOGLE_CLIENT_ID=
