# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/crushbot_ai
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# External Service APIs
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag

RAKUTEN_APP_ID=your-rakuten-app-id
RAKUTEN_AFFILIATE_ID=your-rakuten-affiliate-id

YAHOO_CLIENT_ID=your-yahoo-client-id
YAHOO_CLIENT_SECRET=your-yahoo-client-secret

KAKAKU_API_KEY=your-kakaku-api-key

MERCARI_CLIENT_ID=your-mercari-client-id
MERCARI_CLIENT_SECRET=your-mercari-client-secret

# Notification Services
FCM_SERVER_KEY=your-firebase-cloud-messaging-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Security Configuration
ALLOWED_ORIGINS=http://localhost:8081,https://yabaii.day,https://www.yabaii.day,https://app.yabaii.day
VALID_API_KEYS=
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# CORS Configuration
CORS_ORIGIN=http://localhost:8081
CORS_ORIGIN_PRODUCTION=https://yabaii.day

# Logging
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_HEADERS=false
LOG_BODY=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW=900000
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_SEARCH_WINDOW=60000
RATE_LIMIT_SEARCH_MAX=60
RATE_LIMIT_PRICE_WINDOW=60000
RATE_LIMIT_PRICE_MAX=30

# Cache Configuration
CACHE_TTL_SECONDS=300
SEARCH_CACHE_TTL_SECONDS=60

# AI Model Configuration
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Feature Flags
ENABLE_AI_SUMMARIES=true
ENABLE_PRICE_ALERTS=true
ENABLE_COMMUNITY_FEATURES=true
ENABLE_RECOMMENDATIONS=true

# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1